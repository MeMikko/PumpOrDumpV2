{
  "compilerOptions": {
    /* üî• PAKOLLINEN WEB3 + BIGINT */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* TypeScript behavior */
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,

    /* Module / bundler */
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",

    /* Next.js + TS */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* Performance */
    "incremental": true,
    "types": ["node"],

    /* TS import extensions */
    "allowImportingTsExtensions": true,

    /* ‚≠ê PATH ALIAS (ERITT√ÑIN T√ÑRKE√Ñ) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Next.js plugin (Vercel lis√§si t√§m√§n automaattisesti) */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],

  "exclude": ["node_modules"]
}
